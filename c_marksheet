	printf("  ||PROG-FUND       |  100   |   50    |      %d       |       fail          ||\n",m2);}
	else{
	printf("  ||PROG-FUND       |  100   |   50    |      %d       |       Pass          ||\n",m2);}
	if(m3<50){
	printf("  ||CALCULAS        |  100   |   50    |      %d       |       fail          ||\n",m3);}
	else{
	printf("  ||CALCULAS        |  100   |   50    |      %d       |       pass          ||\n",m3);}
	if(m4<50){
	printf("  ||ICT             |  100   |   50    |      %d       |       fail          ||\n",m4);}
	else{
	printf("  ||ICT             |  100   |   50    |      %d       |       Pass    	     ||\n",m4);}
if(m5<50){
	printf("  ||APP-PHYSICS     |  100   |   50    |      %d       |       fail          ||\n",m5);}
	else{
	printf("  ||APP-PHYSICS     |  100   |   50    |      %d       |       pass          ||\n",m5);}
	printf("  ||_________________________________________________________________________||\n");
	printf("  ||OBTAINED        |  %d                   	                    	     ||\n",obt);
	printf("  ||PERCENTAGE      |  %.3f         	                           	     ||\n",per);
	printf("  ||_________________________________________________________________________||\n");
       if(per>=90 && per<=100)
       {
	printf("  ||GPA             |  4.0	        			   	     ||\n");
	printf("  ||GRADE           |  A+					   	     ||\n");
       }
       else if(per>=80 && per<=89)
       {
	printf("  ||GPA             |  3.66                                      	     ||\n");
	printf("  ||GRADE           |  A                                              	     ||\n");
       }
       else if(per>=75 && per<=79)
       {
	printf("  ||GPA             |  3.33                                    	             ||\n");
	printf("  ||GRADE           |  B+                                       	     ||\n");
       }
       else if(per>=70 && per<=74)
       {
	printf("  ||GPA             |  3.00                                         	     ||\n");
	printf("  ||GRADE           |  B+                                           	     ||\n");
       }
       else if(per>=65 && per<=69)
       {
	printf("  ||GPA             |  2.66                                                  ||\n");
	printf("  ||GRADE           |  C+                                                    ||\n");
       }
       else if(per>=60 && per<=64)
       {
	printf("  ||GPA             |  2.33                                                  ||\n");
	printf("  ||GRADE           |  C+                                                    ||\n");
       }
       else if(per>=55 && per<=59)
       {
	printf("  ||GPA             |  2.00                                                  ||\n");
	printf("  ||GRADE           |  D+                                                    ||\n");
       }
       else if(per>=50 && per<=54)
       {
	printf("  ||GPA             |  1.66                                                  ||\n");
	printf("  ||GRADE           |  D                                                     ||\n");
       }
       else if(per>=45 && per<=49)
       {
	printf("  ||GPA             |  1.33                                                  ||\n");
	printf("  ||GRADE           |  E+                                                    ||\n");
       }
       else if (per>=40 && per<=44)
       {
	printf("  ||GPA             |  1.00                                                  ||\n");
	printf("  ||GRADE           |  E                                                     ||\n");
       }
       else if(per>=0 && per<40)
       {
	printf("  ||GPA             |  0.0                                                   ||\n");
	printf("  ||GRADE           |  F                                                     ||\n");
       }
	printf("  ||_________________________________________________________________________||\n\n\n");
